{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block page_title %}Duiklog Overzicht{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Locatie</th>
                    <th>Maximale diepte (m)</th>
                    <th>Duur (uren)</th>
                    <th>Opleiding</th>
                    <th>Notities</th>
                    <th>Acties</th>
                </tr>
            </thead>
            <tbody>
                {% for dive in dives %}
                    <tr>
                        <td>{{ dive.date|date('d-m-Y') }}</td>
                        <td>{{ dive.location }}</td>
                        <td>{{ dive.maxDepth }}</td>
                        <td>{{ dive.duration }}</td>
                        <td>{{ dive.course ?? '-' }}</td>
                        <td>{{ dive.notes ?? '-' }}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_divelog_edit', {id: dive.id}) }}" class="btn btn-sm btn-success">Bewerken</a>
                                {{ macros.delete_button('app_divelog_delete', {id: dive.id}, 'delete_divelog_' ~ dive.id, 'Weet je zeker dat je deze duik wilt verwijderen?') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">Geen duiken gevonden</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="text-muted">
                        <strong>Totaal: {{ dives|length }}</strong>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
