{% extends 'layout.html.twig' %}

{% block title %}New divelog{% endblock %}

{% block content %}
    <div class="container my-4">
        <h1 class="mb-4">New divelog entry</h1>

        {# Flash messages as Bootstrap alerts #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% set alertClass = (label == 'error') ? 'danger' : label %}
                <div class="alert alert-{{ alertClass }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}

        <div class="mb-2 col-2">
            {{ form_label(form.date, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.date, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.date) }}
        </div>

        <div class="mb-2 col-3">
            {{ form_label(form.location, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.location, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.location) }}
        </div>

        <div class="mb-2 col-6">
            {{ form_label(form.notes, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.notes, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.notes) }}
        </div>

        <div class="mb-2 col-2">
            {{ form_label(form.maxDepth, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.maxDepth, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.maxDepth) }}
        </div>

        <div class="mb-2 col-3">
            {{ form_label(form.course, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.course, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.course) }}
        </div>

        <div class="mb-2 col-2">
            {{ form_label(form.duration, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.duration, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.duration) }}
        </div>

        <div class="mb-2 col-6">
            {{ form_label(form.images, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.images, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.images) }}
        </div>

        <button type="submit" class="btn btn-primary">Save</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
