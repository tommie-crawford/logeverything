{# templates/login/index.html.twig #}
{% extends 'layout.html.twig' %}

{# ... #}

{% block content %}

    <div class="container-fluid">
        <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>Location</th>
                            <th>MaxDepth</th>
                            <th>Duration</th>
                            <th>Course</th>
                            <th>Notes</th>
                            <th>Bewerken</th>
                            <th>Verwijderen</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for dive in dives %}
                            <tr>
                                <td>{{ dive.date|date('d-m-Y') }}</td>
                                <td>{{ dive.location }}</td>
                                <td>{{ dive.maxDepth }}</td>
                                <td>{{ dive.duration }}</td>
                                <td>{{ dive.course }}</td>
                                <td>{{ dive.notes }}</td>
                                <td><a href="#">Edit</a></td>
                                <td><a href="#">Delete</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

{% endblock %}
