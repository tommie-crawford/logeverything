{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block page_title %}Vissen Overzicht{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Type</th>
                    <th>Gewicht (kg)</th>
                    <th>Lengte (cm)</th>
                    <th>Acties</th>
                </tr>
            </thead>
            <tbody>
                {% for catch in catches %}
                    <tr>
                        <td>{{ catch.date|date('d-m-Y') }}</td>
                        <td>{{ catch.type ? catch.type.value : '-' }}</td>
                        <td>{{ catch.weight ?? '-' }}</td>
                        <td>{{ catch.length ?? '-' }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_fishinglog_edit', {id: catch.id}) }}" class="btn btn-sm btn-success">Bewerken</a>
                                {{ macros.delete_button('app_fishinglog_delete', {id: catch.id}, 'delete_fishinglog_' ~ catch.id, 'Weet je zeker dat je deze vangst wilt verwijderen?') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Geen vangsten gevonden</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5" class="text-muted">
                        <strong>Totaal: {{ catches|length }}</strong>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
